<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:paddingRight="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_vertical_margin">

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/etExpression"
        android:editable="false"
        android:clickable="false"
        android:textSize="40sp"
        android:textStyle="normal"
        android:longClickable="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/tvResult"
        android:textSize="56sp"
        android:textStyle="bold"
        android:layout_below="@+id/etExpression"
        android:layout_alignRight="@+id/etExpression"
        android:layout_alignEnd="@+id/etExpression" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/tvResult"
        android:layout_alignRight="@+id/etExpression"
        android:layout_alignEnd="@+id/etExpression"
        android:layout_marginTop="30dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:id="@+id/fillerCol1"
                    android:layout_weight="0.2"
                    android:padding="2dp"/>

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:text="7"
                    android:id="@+id/btn7"
                    android:layout_weight="0.2"
                    android:padding="2dp"/>

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:text="4"
                    android:id="@+id/btn4"
                    android:layout_weight="0.2"
                    android:padding="2dp"/>

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:text="1"
                    android:id="@+id/btn1"
                    android:layout_weight="0.2"
                    android:padding="2dp"/>

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:text="0"
                    android:id="@+id/btn0"
                    android:layout_weight="0.2"
                    android:padding="2dp"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.25">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:id="@+id/fillerCol2"
                    android:layout_weight="0.2"
                    android:padding="2dp"/>

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:text="8"
                    android:id="@+id/btn8"
                    android:layout_weight="0.2"
                    android:padding="2dp"/>

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:text="5"
                    android:id="@+id/btn5"
                    android:layout_weight="0.2"
                    android:padding="2dp"/>

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:text="2"
                    android:id="@+id/btn2"
                    android:layout_weight="0.2"
                    android:padding="2dp"/>

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:text="."
                    android:id="@+id/btnDot"
                    android:layout_weight="0.2"
                    android:padding="2dp"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.25">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:id="@+id/fillerCol3"
                    android:layout_weight="0.2"
                    android:padding="2dp"/>

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:text="9"
                    android:id="@+id/btn9"
                    android:layout_weight="0.2"
                    android:padding="2dp"/>

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:text="6"
                    android:id="@+id/btn6"
                    android:layout_weight="0.2"
                    android:padding="2dp"/>

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:text="3"
                    android:id="@+id/btn3"
                    android:layout_weight="0.2"
                    android:padding="2dp"/>

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:text="="
                    android:id="@+id/btnEqual"
                    android:layout_weight="0.2"
                    android:padding="2dp"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.25">

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:text="Del"
                    android:id="@+id/btnDel"
                    android:layout_weight="0.2"
                    android:padding="2dp" />

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:text="+"
                    android:id="@+id/btnAdd"
                    android:layout_weight="0.2"
                    android:padding="2dp"/>

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:text="-"
                    android:id="@+id/btnSub"
                    android:layout_weight="0.2"
                    android:padding="2dp"/>

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:text="*"
                    android:id="@+id/btnMult"
                    android:layout_weight="0.2"
                    android:padding="2dp"/>

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:text="/"
                    android:id="@+id/btnDiv"
                    android:layout_weight="0.2"
                    android:padding="2dp"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
